# Helix AI Gateway Environment Configuration
# Replace with your actual API keys for production use

# LiteLLM Configuration
LITELM_LOG="INFO"
LITELM_DROP_PARAMS="true"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Vector Search Configuration
SIMILARITY_THRESHOLD=0.85
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_DIMENSIONS=1536

# Caching Configuration
CACHE_TTL_EXACT=3600
CACHE_TTL_SEMANTIC=7200
ENABLE_SEMANTIC_CACHE=true
ENABLE_EXACT_CACHE=true

# PII Configuration
ENABLE_PII_REDACTION=true
PII_ENTITIES=CREDIT_CARD,EMAIL_ADDRESS,PHONE_NUMBER,API_KEY,PASSWORD,IBAN_CODE,US_SSN,UK_NHS,URL

# OpenAI API Key (replace with your actual key)
OPENAI_API_KEY=sk-test-key-replace-with-actual

# Anthropic API Key (replace with your actual key)
ANTHROPIC_API_KEY=sk-ant-test-key-replace-with-actual

# Groq API Key (replace with your actual key)
GROQ_API_KEY=gsk_test-key-replace-with-actual

# Database Configuration
DATABASE_URL=postgresql://postgres:helix123@localhost:5432/helix

# Dashboard Configuration
DASHBOARD_HOST=localhost
DASHBOARD_PORT=8501
DASHBOARD_DEBUG=false

# Proxy Configuration
PROXY_HOST=localhost
PROXY_PORT=4000
PROXY_WORKERS=4

# Security Configuration
ENABLE_AUTH=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=1000

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO

# Cost Optimization
ENABLE_MODEL_SWAPPING=true
COST_SAVINGS_TARGET=0.4
BUDGET_ALERT_THRESHOLD=100.0

# Performance Tuning
CONNECTION_POOL_SIZE=100
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=100

# Development Mode
DEVELOPMENT_MODE=true
DEBUG_LOGGING=false
